<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8CB0F1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#11248B"
            android:gravity="center"
            android:text="Gerar Código de Barras ( MANUAL )"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spBarcodeTipo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#439AE6"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/lblTituloCodigo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#11248B"
            android:gravity="center"
            android:text="Texto Do Código:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtTituloCodigo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#439AE6"
            android:ems="10"
            android:gravity="center"
            android:inputType="textCapWords"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblValorNumerico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#11248B"
            android:gravity="center"
            android:singleLine="true"
            android:text="Valor Numérico:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtValorNumerico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#439AE6"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnImprimir"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="Imprimir  Código"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="#000000"
            android:background="@drawable/buttonshape_yellow"
            android:shadowColor="#B0B0B0"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            />

        <TextView
            android:id="@+id/edtWarnings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="#FA0091EA"
            android:gravity="center"
            android:text="Mensagens da Impressora"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>